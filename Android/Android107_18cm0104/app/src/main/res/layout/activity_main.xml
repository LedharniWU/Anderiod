<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.example.guest.cm0104.android107_18cm0104.MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="熟語クイズゲーム"
        android:textAlignment="center"
        android:textSize="40sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/heroHpTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hp 20/20"
            android:textAlignment="center"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/enemyHptxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hp20/20"
            android:textAlignment="center"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            app:srcCompat="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@mipmap/ic_launcher" />

    </LinearLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:columnCount="5"
        android:rowCount="5">

        <TextView
            android:id="@+id/txtUp"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="0"
            android:text="相"
            android:textAlignment="center"
            android:textSize="@dimen/questionTextSize" />

        <TextView
            android:id="@+id/txtLeft"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_row="2"
            android:text="的"
            android:textSize="@dimen/questionTextSize" />

        <TextView
            android:id="@+id/txtRight"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_column="4"
            android:layout_gravity="center"
            android:layout_row="2"
            android:text="比"
            android:textSize="@dimen/questionTextSize" />

        <TextView
            android:id="@+id/txtDown"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="4"
            android:text="抗"
            android:textAlignment="center"
            android:textSize="@dimen/questionTextSize" />

        <TextView

            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="1"
            android:text="↓"
            android:textAlignment="center"
            android:textSize="@dimen/questionTextSize" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="3"
            android:text="↓"
            android:textAlignment="center"
            android:textSize="@dimen/questionTextSize" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="fill_vertical"
            android:layout_row="2"
            android:text="→"
            android:textAlignment="center"
            android:textSize="@dimen/questionTextSize" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_gravity="fill_vertical"
            android:layout_row="2"
            android:text="→"
            android:textAlignment="center"
            android:textSize="@dimen/questionTextSize" />
    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnAnsw1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="対" />

        <Button
            android:id="@+id/btnAnsw2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="対" />

        <Button
            android:id="@+id/btnAnsw3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="対" />

        <Button
            android:id="@+id/btnAnsw4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="対" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtMassage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txtMassageStr"
        android:textSize="30sp" />


</LinearLayout>
