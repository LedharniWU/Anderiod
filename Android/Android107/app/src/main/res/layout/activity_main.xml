<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.guest.cm0104.android107.MainActivity"
    android:weightSum="1">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="5"
        android:rowCount="5">

        <TextView
            android:id="@+id/txtUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="0"
            android:text="相"
            android:textSize="@dimen/questionTextSize" />

        <TextView
            android:id="@+id/txtLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:text="的"
            android:textSize="@dimen/questionTextSize" />

        <EditText
            android:id="@+id/edtAnswer"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="2"
            android:inputType="text"
            android:textSize="@dimen/questionTextSize" />

        <TextView
            android:id="@+id/txtRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:layout_row="2"
            android:text="比"
            android:textSize="@dimen/questionTextSize" />

        <TextView
            android:id="@+id/txtDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="4"
            android:text="抗"
            android:textSize="@dimen/questionTextSize" />

        <TextView

            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="1"
            android:text="↓"
            android:textAlignment="center"
            android:textSize="@dimen/questionTextSize" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="3"
            android:text="↓"
            android:textAlignment="center"
            android:textSize="@dimen/questionTextSize" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="fill_vertical"
            android:layout_row="2"
            android:text="→"
            android:textAlignment="center"
            android:textSize="@dimen/questionTextSize" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_gravity="fill_vertical"
            android:layout_row="2"
            android:text="→"
            android:textAlignment="center"
            android:textSize="@dimen/questionTextSize" />
    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/comBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onCheckAction"
            android:text="@string/comBtnStr" />

        <Button
            android:id="@+id/giveUpBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="giveUpAction"
            android:text="@string/giveUpBtnStr" />
    </LinearLayout>

    <TextView
        android:id="@+id/endTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/endTxtStr"
        android:textAlignment="center"
        android:textSize="30sp" />
</LinearLayout>
